<p id="notice"><%= notice %></p>

<h1>Listing Reviews And Ratings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if logged_in? %>
      <li><%= link_to "Logout", logout_path, method: "delete" %></li>
    <% else %>  
      <li><%= link_to "Login", login_path %></li>
    <% end %>  
    <% @reviews_and_ratings.each do |reviews_and_rating| %>
      <tr>
        <td><%= link_to 'Rate', reviews_and_rating %></td>
        <td><%= link_to 'Stars', reviews_and_rating %></td>
        <td><%= link_to 'Show', reviews_and_rating %></td>
        <td><%= link_to 'Edit', reviews_and_rating %></td>
        <td><%= link_to 'Destroy', reviews_and_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= form_tag do %>

  <%= label_tag :reviews_and_rating, 'ReviewsAndRating: ' %><br>
  <%= text_field_tag :reviews_and_rating %><br>
  <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Reviews and rating', new_reviews_and_rating_path %>
<%= link_to 'Rate', reviews_and_ratings_path %>
